{
  "name": "share-and-tell-electron",
  "version": "0.1.0",
  "description": "Cross-platform desktop app for Share and Tell.",
  "author": "Princeton University",
  "license": "MIT",
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "clean": "rimraf dist",
  "build": "npm run clean && tsc && node ./scripts/copy-assets.cjs",
    "start": "npm run build && electron .",
    "dev": "concurrently \"tsc --watch\" \"npm run dev-electron\"",
    "dev-electron": "wait-on dist/main/main.js dist/renderer/renderer.js dist/renderer/index.html && electron .",
    "lint": "tsc --noEmit",
  "package": "npm run build && node ./scripts/check-dist.cjs && electron-builder"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^30.0.6",
    "@types/node": "^20.14.12",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.7",
    "typescript": "^5.6.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "edu.princeton.shareandtell",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis", "portable"],
      "requestedExecutionLevel": "asInvoker"
    }
  }
}
